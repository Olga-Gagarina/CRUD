<main class="main">
    <section>
        <div class=" form">
            <h1 class="form__title">Інформація про товар </h1>
            <form method="POST" action="/product-create">
                <div class="form__content">
                    <div class="form__flex">
                        <div class="form__fild">
                            <label for="name" class="form__label"> Назва товару </label>
                            <input type="text" name="name" required class="form__input">
                        </div>
                        <div class="form__fild">
                            <label for="price" class="form__label"> Ціна </label>
                            <input type="number" required max="999999" maxlength="6" name="price" class="form__input">
                        </div>
                    </div>
                    <div class="form__fild">
                        <label for="description" required class="form__label">Короткий опис товару </label>
                        <input type="text" name="description" class="form__input">
                        <div class="comment">Відображується в картці товару</div>
                    </div>
                    <button class="form__button click"> Створити товар</button>
                </div>
            </form>
        </div>
    </section>
